@model IEnumerable<HRM.Region>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <a href="~/Region/Create" class="btn btn-success">Add Region</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>RegionId</th>
                        <th>RegionName</th>
                        <th>IsActive</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(itemModel => item.RegionId)</td>
                            <td>@Html.DisplayFor(itemModel => item.RegionName)</td>
                            <td>
                                @if (item.isActive == true)
                                {
                                    <a href="" onclick="return confirmLockRegion('@item.RegionId');">
                                        <i class="fa fa-unlock" style="color:green"></i>
                                    </a>

                                }
                                else if (item.isActive == false)
                                {
                                    <a href="" onclick="return confirmActiveRegion('@item.RegionId');">
                                        <i class="fa fa-lock" style="color:red"></i>
                                    </a>
                                }
                            </td>

                        </tr>

                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>